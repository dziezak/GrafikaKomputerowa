<Window x:Class="ChromaticityDiagram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/> <!-- Podkowa -->
            <ColumnDefinition Width="2*"/> <!-- Krzywa widmowa -->
        </Grid.ColumnDefinitions>
        
        

        <!-- Canvas dla podkowy -->
        <Canvas Name="myCanvas" Background="White" Grid.Column="0"/>

       
        <!-- Prawa kolumna: kontener z dwiema nakładającymi się warstwami -->
        <Grid Grid.Column="1">
            <!-- Warstwa osi / siatki (pod spodem) -->
            <Canvas Name="axesCanvas" Background="#F8F8F8" IsHitTestVisible="False"/>
            <!-- Warstwa punktów (na wierzchu) -->
            <Canvas Name="spectrumCanvas" Background="Transparent"
                    MouseLeftButtonDown="SpectrumCanvas_MouseLeftButtonDown"/>
        </Grid>


    </Grid>

</Window>
