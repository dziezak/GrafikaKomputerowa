<!-- Views/MainWindow.axaml -->
<Window
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ChroaticityChart.ViewModels"
        x:Class="ChroaticityChart.MainWindow"
        Width="800" Height="600"
        Title="{Binding Title}"
        x:DataType="vm:MainWindowViewModel">
  
        <!-- Opcja A: ustawienie DataContext w XAML (działa jeśli VM ma publiczny konstruktor bez parametrów) -->
        <Window.DataContext>
                <vm:MainWindowViewModel/>
        </Window.DataContext>

        <Grid ColumnDefinitions="*,*">
                <ContentControl Grid.Column="0" Content="{Binding SPDViewModel}"/>
                <Border Grid.Column="1" Background="LightGray">
                        <TextBlock Text="Tutaj wykres podkowy CIE xy"/>
                </Border>
        </Grid>
</Window>


